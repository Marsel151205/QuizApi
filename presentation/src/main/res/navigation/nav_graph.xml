<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/answerFragment"
        android:name="com.example.presentation.ui.fragments.answer.AnswerFragment"
        android:label="fragment_answer"
        tools:layout="@layout/fragment_answer">
        <action
            android:id="@+id/action_answerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="question"
            app:argType="string" />
        <argument
            android:name="answerA"
            app:nullable="true"
            app:argType="string" />
        <argument
            android:name="answerB"
            app:nullable="true"
            app:argType="string" />
        <argument
            android:name="answerC"
            app:nullable="true"
            app:argType="string" />
        <argument
            android:name="answerD"
            app:nullable="true"
            app:argType="string" />
        <argument
            android:name="answerE"
            app:nullable="true"
            app:argType="string" />
        <argument
            android:name="answerF"
            app:nullable="true"
            app:argType="string" />
        <argument
            android:name="correctAnswer"
            app:nullable="true"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="explanation"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.presentation.ui.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_answerFragment"
            app:destination="@id/answerFragment" />
    </fragment>
</navigation>